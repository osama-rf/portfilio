      </svg>
      <span id="cta-button-text" class="text-xl font-bold text-white"
        >اطلب تطبيقك الآن</span
      >
    </a>
  </div>
</section>

<script>
  import { languageStore } from "@app/language-store";

  const updateCTA = () => {
    const ui = languageStore.content.ui;
    const pricing = languageStore.content.pricing;

    const ctaTitleEl = document.getElementById("cta-title");
    const ctaSubtitleEl = document.getElementById("cta-subtitle");
    const ctaButtonTextEl = document.getElementById("cta-button-text");
    const ctaMvpTextEl = document.getElementById("cta-mvp-text");
    const ctaPriceFromEl = document.getElementById("cta-price-from");
    const ctaPriceToEl = document.getElementById("cta-price-to");
    const ctaPriceCurrencyEl = document.getElementById("cta-price-currency");
    const ctaPriceNoteEl = document.getElementById("cta-price-note");

    if (ctaTitleEl) ctaTitleEl.textContent = ui.ctaFinalTitle || ui.ctaMain || "Ready to Launch?";
    if (ctaSubtitleEl) ctaSubtitleEl.textContent = ui.ctaSubtitle || "Let's turn your idea into an app people love";
    if (ctaButtonTextEl) ctaButtonTextEl.textContent = ui.ctaFinalButton || ui.whatsapp || "Message Us on WhatsApp";
    if (ctaMvpTextEl) ctaMvpTextEl.textContent = pricing.mvpText;
    if (ctaPriceFromEl) ctaPriceFromEl.textContent = pricing.priceFrom;
    if (ctaPriceToEl) ctaPriceToEl.textContent = pricing.priceTo;
    if (ctaPriceCurrencyEl) ctaPriceCurrencyEl.textContent = pricing.priceCurrency;
    if (ctaPriceNoteEl) ctaPriceNoteEl.textContent = pricing.note;
  };

  window.addEventListener("language-change", updateCTA);
  updateCTA();
</script>
