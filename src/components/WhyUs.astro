---
import { WHY_US_ITEMS } from "@config";

const items = WHY_US_ITEMS.ar;
---

<section id="why-us" class="py-16">
  <div class="text-center mb-20">
    <p class="text-sm font-semibold uppercase tracking-widest text-primary mb-4">الفرق</p>
    <h2
      id="whyus-title"
      class="text-3xl md:text-5xl font-bold font-serif gradient-text-primary mb-4"
    >
      ليش تشتغل معنا؟
    </h2>
  </div>

  <div class="grid grid-cols-1 sm:grid-cols-2 gap-8" id="whyus-grid">
    {
      items.map(({ icon, title, description }, index) => (
        <div
          class="whyus-card group text-center rounded-3xl border border-primary/10 bg-gradient-to-b from-primary/5 to-transparent p-10 transition-all duration-500 hover:border-primary/25 hover:from-primary/10 hover:shadow-xl hover:shadow-primary/5 hover:-translate-y-1"
          data-whyus-index={index}
        >
          <div class="whyus-icon inline-flex items-center justify-center w-16 h-16 rounded-2xl bg-primary/10 border border-primary/20 mb-6 group-hover:scale-110 transition-transform duration-300">
            {icon === "experience" && (
              <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4.26 10.147a60.436 60.436 0 00-.491 6.347A48.627 48.627 0 0112 20.904a48.627 48.627 0 018.232-4.41 60.46 60.46 0 00-.491-6.347m-15.482 0a50.57 50.57 0 00-2.658-.813A59.905 59.905 0 0112 3.493a59.902 59.902 0 0110.399 5.84c-.896.248-1.783.52-2.658.814m-15.482 0A50.697 50.697 0 0112 13.489a50.702 50.702 0 017.74-3.342M6.75 15a.75.75 0 100-1.5.75.75 0 000 1.5zm0 0v-3.675A55.378 55.378 0 0112 8.443m-7.007 11.55A5.981 5.981 0 006.75 15.75v-1.5" />
              </svg>
            )}
            {icon === "speed" && (
              <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3.75 13.5l10.5-11.25L12 10.5h8.25L9.75 21.75 12 13.5H3.75z" />
              </svg>
            )}
            {icon === "chat" && (
              <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M20.25 8.511c.884.284 1.5 1.128 1.5 2.097v4.286c0 1.136-.847 2.1-1.98 2.193-.34.027-.68.052-1.02.072v3.091l-3-3c-1.354 0-2.694-.055-4.02-.163a2.115 2.115 0 01-.825-.242m9.345-8.334a2.126 2.126 0 00-.476-.095 48.64 48.64 0 00-8.048 0c-1.131.094-1.976 1.057-1.976 2.192v4.286c0 .837.46 1.58 1.155 1.951m9.345-8.334V6.637c0-1.621-1.152-3.026-2.76-3.235A48.455 48.455 0 0011.25 3c-2.115 0-4.198.137-6.24.402-1.608.209-2.76 1.614-2.76 3.235v6.226c0 1.621 1.152 3.026 2.76 3.235.577.075 1.157.14 1.74.194V21l4.155-4.155" />
              </svg>
            )}
            {icon === "target" && (
              <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z" />
              </svg>
            )}
          </div>
          <h3 class="whyus-card-title text-xl font-bold text-white mb-3">{title}</h3>
          <p class="whyus-card-description text-neutral text-sm leading-relaxed max-w-xs mx-auto">{description}</p>
        </div>
      ))
    }
  </div>
</section>

<style>
  .whyus-card {
    text-align: center !important;
  }
  [dir="rtl"] .whyus-card {
    text-align: center !important;
  }
  [dir="rtl"] .whyus-card * {
    text-align: center !important;
  }
</style>

<script>
  import { languageStore } from "@app/language-store";
  import { WHY_US_ITEMS } from "@config";

  const updateWhyUs = () => {
    const ui = languageStore.content.ui;
    const lang = languageStore.language as "en" | "ar";
    const items = WHY_US_ITEMS[lang];

    const titleEl = document.getElementById("whyus-title");
    if (titleEl) titleEl.textContent = ui.whyUsTitle || "Why Work With Us?";

    const cards = document.querySelectorAll("[data-whyus-index]");
    cards.forEach((card, index) => {
      const item = items[index];
      if (!item) return;
      const titleEl = card.querySelector(".whyus-card-title");
      const descEl = card.querySelector(".whyus-card-description");
      if (titleEl) titleEl.textContent = item.title;
      if (descEl) descEl.textContent = item.description;
    });
  };

  window.addEventListener("language-change", updateWhyUs);
  updateWhyUs();
</script>
