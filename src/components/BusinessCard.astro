---
import Section from "./Section.astro";
---

<Section text="بطاقة الأعمال" href="business-card">
  <div class="flex flex-col items-center justify-center py-12">
    <div class="business-card-container max-w-2xl w-full bg-gradient-to-br from-white/10 to-white/5 backdrop-blur-lg rounded-3xl border border-white/20 shadow-2xl p-8 md:p-12">
      <div class="grid md:grid-cols-2 gap-8 items-center">
        <!-- Left Side - Info -->
        <div class="text-center md:text-left space-y-4">
          <h3 class="text-3xl md:text-4xl font-bold text-white" dir="ltr">osama-labs</h3>
          <p id="business-card-tagline" class="text-lg text-primary/90 font-medium">
            شريكك التقني في تحويل افكارك لنجاحات
          </p>
          <div class="space-y-2 text-neutral">
            <p class="flex items-center gap-2 justify-center md:justify-start">
              <svg class="w-5 h-5 text-primary" fill="currentColor" viewBox="0 0 20 20">
                <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"></path>
                <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"></path>
              </svg>
              <span>contact@osama-labs.com</span>
            </p>
            <p class="flex items-center gap-2 justify-center md:justify-start">
              <svg class="w-5 h-5 text-primary" fill="currentColor" viewBox="0 0 20 20">
                <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"></path>
              </svg>
              <span dir="ltr">+966 56 391 3944</span>
            </p>
          </div>
        </div>

        <!-- Right Side - QR Code -->
        <div class="flex flex-col items-center space-y-4">
          <div class="bg-white p-6 rounded-2xl shadow-xl">
            <img
              src="/qr-code.png"
              alt="QR Code for osama-labs"
              class="w-48 h-48 md:w-56 md:h-56"
            />
          </div>
          <p id="business-card-scan" class="text-sm text-neutral/80 text-center">
            امسح الكود لزيارة موقعنا
          </p>
        </div>
      </div>

      <!-- Bottom CTA -->
      <div class="mt-8 pt-8 border-t border-white/10 text-center">
        <a
          href="https://wa.me/966563913944?text=مرحباً، عندي فكرة وأبغى أعرف تفاصيل العرض."
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-3 px-8 py-4 bg-gradient-to-r from-pink-500 via-purple-500 to-indigo-500 text-white font-bold text-lg rounded-full shadow-lg hover:shadow-pink-500/50 transition-all duration-300 hover:scale-105"
        >
          <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
            <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893A11.821 11.821 0 0020.885 3.488"></path>
          </svg>
          <span id="business-card-cta">تواصل معنا الآن</span>
        </a>
      </div>
    </div>
  </div>
</Section>

<script>
  import { languageStore } from "@app/language-store";

  const updateBusinessCard = () => {
    const ui = languageStore.content.ui;

    const taglineEl = document.getElementById("business-card-tagline");
    const scanEl = document.getElementById("business-card-scan");
    const ctaEl = document.getElementById("business-card-cta");

    if (taglineEl) taglineEl.textContent = ui.businessCardTagline || "شريكك التقني في تحويل افكارك لنجاحات";
    if (scanEl) scanEl.textContent = ui.businessCardScan || "امسح الكود لزيارة موقعنا";
    if (ctaEl) ctaEl.textContent = ui.businessCardCTA || "تواصل معنا الآن";
  };

  // Listen for language changes
  window.addEventListener("language-change", updateBusinessCard);

  // Initialize
  updateBusinessCard();
</script>
