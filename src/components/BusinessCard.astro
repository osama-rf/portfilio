<section class="py-24 md:py-32 text-center" id="business-card">
  <!-- Name with gradient like hero -->
  <h1
    id="business-card-name"
    class="business-card-name mb-12 font-serif text-7xl font-bold tracking-tightest text-white sm:text-8xl md:mb-16 md:text-9xl lg:text-[8rem] xl:text-[9rem]"
    dir="ltr"
  >
    osama-labs
  </h1>

  <!-- Specialty with wavy underline like hero -->
  <div class="flex justify-center mb-12 md:mb-16">
    <div class="inline-block relative">
      <p
        id="business-card-tagline"
        class="business-card-tagline font-serif text-xl leading-[36px] font-medium tracking-tight text-primary/80 sm:text-2xl md:text-3xl relative pb-3"
      >
        شريكك التقني في تحويل افكارك لنجاحات
      </p>
      <svg class="wavy-underline absolute bottom-0 left-0 w-full" height="12" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="none">
        <path d="M0,8 Q10,2 20,8 T40,8 T60,8 T80,8 T100,8 T120,8 T140,8 T160,8 T180,8 T200,8 T220,8 T240,8 T260,8 T280,8 T300,8 T320,8 T340,8 T360,8 T380,8 T400,8 T420,8 T440,8 T460,8 T480,8 T500,8 T520,8 T540,8 T560,8 T580,8 T600,8 T620,8 T640,8 T660,8 T680,8 T700,8 T720,8 T740,8 T760,8 T780,8 T800,8 T820,8 T840,8 T860,8 T880,8 T900,8 T920,8 T940,8 T960,8 T980,8 T1000,8" stroke="#f093fb" stroke-width="3" fill="none"/>
      </svg>
    </div>
  </div>

  <!-- QR Code -->
  <div class="flex flex-col items-center justify-center space-y-6 max-w-4xl mx-auto">
    <div class="bg-gradient-to-br from-purple-500/20 to-pink-500/20 p-8 rounded-3xl shadow-2xl border-2 border-purple-500/30">
      <img
        src="/qr-code.png"
        alt="QR Code for osama-labs"
        class="w-64 h-64 md:w-80 md:h-80 lg:w-96 lg:h-96"
      />
    </div>
    <p id="business-card-scan" class="text-lg md:text-xl text-neutral font-medium text-center">
      امسح الكود لزيارة موقعنا
    </p>
  </div>
</section>

<style>
  .business-card-name {
    direction: ltr !important;
    text-align: center !important;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 25%, #f093fb 50%, #4facfe 75%, #00f2fe 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    background-size: 200% 200%;
    animation: gradient-shift 8s ease infinite;
    font-weight: 900;
    letter-spacing: -0.02em;
    line-height: 1.1;
    white-space: nowrap;
  }

  [dir="rtl"] .business-card-name {
    direction: ltr !important;
    text-align: center !important;
  }

  .business-card-tagline {
    text-align: center !important;
  }

  [dir="rtl"] .business-card-tagline {
    text-align: center !important;
  }

  @keyframes gradient-shift {
    0% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
    100% {
      background-position: 0% 50%;
    }
  }
</style>

<script>
  import { languageStore } from "@app/language-store";

  const updateBusinessCard = () => {
    const ui = languageStore.content.ui;

    const taglineEl = document.getElementById("business-card-tagline");
    const scanEl = document.getElementById("business-card-scan");
    const ctaEl = document.getElementById("business-card-cta");

    if (taglineEl) taglineEl.textContent = ui.businessCardTagline || "شريكك التقني في تحويل افكارك لنجاحات";
    if (scanEl) scanEl.textContent = ui.businessCardScan || "امسح الكود لزيارة موقعنا";
    if (ctaEl) ctaEl.textContent = ui.businessCardCTA || "تواصل معنا الآن";
  };

  // Listen for language changes
  window.addEventListener("language-change", updateBusinessCard);

  // Initialize
  updateBusinessCard();
</script>
